# ===============================================
# Docker Development Environment Variables
# ===============================================

# База данных PostgreSQL
DB_HOST=postgres
DB_USER=postgres
DB_PASSWORD=root
DB_NAME=swingfox
DB_PORT=5432

# JWT настройки
JWT_SECRET=swingfox_jwt_secret_key_2024_docker_dev
JWT_EXPIRES_IN=7d

# Email настройки (MailHog для development)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=info@swingfox.ru

# Сервер настройки
PORT=3001
NODE_ENV=development

# Файлы и загрузки
UPLOAD_PATH=public/uploads
MAX_FILE_SIZE=10485760

# React App настройки (для frontend) - HTTPS
REACT_APP_API_URL=https://localhost:3001/api
REACT_APP_WS_URL=wss://localhost:3001/ws

# Настройки для разработки
DEBUG=app:*
LOG_LEVEL=debug

# PostgreSQL настройки для инициализации
POSTGRES_DB=swingfox
POSTGRES_USER=postgres
POSTGRES_PASSWORD=root
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C

# Порты для внешнего доступа (HTTPS режим)
BACKEND_HTTPS_PORT=3001
FRONTEND_HTTPS_PORT=443
POSTGRES_PORT=5432
MAILHOG_SMTP_PORT=1025
MAILHOG_WEB_PORT=8025
DEBUG_PORT=9229

# Docker Compose настройки
COMPOSE_PROJECT_NAME=swingfox-dev
COMPOSE_FILE=docker-compose.yml

# SSL настройки для разработки
SSL_CERT_PATH=docker/ssl/localhost.crt
SSL_KEY_PATH=docker/ssl/localhost.key